FROM extensions/git-clone:latest AS telegram-web
RUN git clone https://gitee.com/stone122/tweb.git /root/tweb
FROM node:lts-slim AS install
COPY --from=telegram-web /root/tweb /root/tweb
WORKDIR /root/tweb 
RUN cd /root/tweb && npm install && npm run build
FROM nginx:alpine
COPY --from=install /root/tweb/public/ /usr/share/nginx/html/public/
ADD ./tweb.conf /etc/nginx/conf.d/tweb.conf
EXPOSE 8080
CMD ["nginx", "-g", "daemon off;"]